{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "g2rd/tabs",
  "version": "1.0.0",
  "title": "G2RD Onglets",
  "category": "g2rd-bloks",
  "icon": "admin-page",
  "description": "Un bloc d'onglets personnalisable permettant d'ajouter du contenu dans chaque onglet",
  "supports": {
    "html": false,
    "color": {
      "background": true,
      "text": true,
      "gradients": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "align": ["wide", "full"],
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "textdomain": "g2rd-tabs",
  "editorScript": "file:./build/index.js",
  "editorStyle": "file:./build/index.css",
  "style": "file:./src/tabs.css",
  "viewScript": "file:./build/tabs-frontend.js",
  "attributes": {
    "tabs": {
      "type": "array",
      "default": [
        {
          "id": "tab-1",
          "title": "Onglet 1",
          "clientId": ""
        },
        {
          "id": "tab-2",
          "title": "Onglet 2",
          "clientId": ""
        }
      ]
    },
    "activeTab": {
      "type": "string",
      "default": "tab-1"
    },
    "style": {
      "type": "string",
      "default": "default"
    },
    "tabAlignment": {
      "type": "string",
      "default": "left"
    },
    "tabBackgroundColor": {
      "type": "string"
    },
    "tabTextColor": {
      "type": "string"
    },
    "activeTabBackgroundColor": {
      "type": "string"
    },
    "activeTabTextColor": {
      "type": "string"
    },
    "contentBackgroundColor": {
      "type": "string"
    },
    "contentTextColor": {
      "type": "string"
    },
    "borderColor": {
      "type": "string"
    },
    "borderWidth": {
      "type": "number",
      "default": 1
    },
    "borderRadius": {
      "type": "number",
      "default": 4
    },
    "showBorder": {
      "type": "boolean",
      "default": true
    },
    "gap": {
      "type": "string",
      "default": "0"
    }
  }
}

