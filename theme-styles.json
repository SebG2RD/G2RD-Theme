{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "styles": {
    "blocks": {
      "core/group": {
        "spacing": {
          "margin": {
            "top": "0 !important"
          }
        }
      },
      "core/template-part": {
        "spacing": {
          "margin": {
            "top": "0 !important"
          }
        }
      },
      "core/image": {
        "border": {
          "radius": "var:custom|radius|s"
        }
      }
    },
    "color": {
      "text": "var:preset|color|primary",
      "background": "var:preset|color|white"
    },
    "spacing": {
      "blockGap": "var:preset|spacing|s",
      "padding": {
        "top": "0",
        "right": "var:preset|spacing|s",
        "bottom": "0",
        "left": "var:preset|spacing|s"
      }
    },
    "typography": {
      "fontFamily": "var:preset|font-family|dm-serif-display",
      "fontSize": "var:preset|font-size|m",
      "fontWeight": "var:custom|font-weight|regular",
      "lineHeight": "var:custom|line-height|regular"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--Rubik)",
          "fontSize": "var:preset|font-size|xxl"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--Rubik)",
          "fontSize": "var:preset|font-size|xl"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
          "fontSize": "var:preset|font-size|l"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
          "fontSize": "var:preset|font-size|m"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
          "fontSize": "var:preset|font-size|s"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--source-sans-pro)",
          "fontSize": "var:preset|font-size|s"
        }
      },
      "link": {
        "color": {
          "text": "var:preset|color|secondary"
        }
      },
      "caption": {
        "color": {
          "text": "var:preset|color|grey-text-alt"
        },
        "typography": {
          "fontSize": "var:preset|font-size|s"
        }
      },
      "button": {
        "css": "transition: .3s ease-in all;",
        "border": {
          "radius": "var:custom|radius|m",
          "width": "0"
        },
        "shadow": "var:preset|shadow|huge",
        "color": {
          "background": "var:preset|color|primary",
          "text": "var:preset|color|white"
        },
        "spacing": {
          "padding": {
            "top": "var:preset|spacing|xs",
            "right": "var:preset|spacing|xs",
            "bottom": "var:preset|spacing|xs",
            "left": "var:preset|spacing|xs"
          }
        },
        "typography": {
          "fontSize": "var:preset|font-size|m",
          "fontWeight": "var:custom|font-weight|bold"
        },
        ":hover": {
          "shadow": "var:preset|shadow|neat",
          "color": {
            "background": "var:custom|color|primaryhover",
            "text": "var:preset|color|white"
          }
        }
      }
    }
  }
}
